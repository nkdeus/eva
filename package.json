{
  "name": "fluid-ui",
  "version": "1.0.0",
  "scripts": {
    "watch": "npx sass --load-path=node_modules --watch styles/main.scss:styles/main.css --style expanded",
    "watch-projects": "node scripts/watch-projects.js",
    "build-css": "npx sass --load-path=node_modules styles/main.scss:styles/main.css --style expanded",
    "build-css-json": "node scripts/build-with-config.js styles/main.scss styles/main.css",
    "build": "npm run build-css && npm run purge",
    "build-json": "npm run build-css-json && npm run purge",
    "purge": "npx eva-purge --css styles/main.css --content '**/*.html' --output styles/main-compressed.css --safelist 'current-theme,toggle-theme,all-grads'",
    "color:convert": "npx eva-color convert",
    "color:palette": "npx eva-color palette",
    "color:theme": "npx eva-color theme"
  },
  "devDependencies": {
    "culori": "^4.0.2",
    "glob": "^10.3.10",
    "sass": "^1.49.0",
    "stylelint": "^14.14.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0"
  },
  "dependencies": {
    "eva-colors": "^2.0.0",
    "eva-css-fluid": "^2.0.0",
    "eva-css-purge": "^2.0.0"
  }
}
